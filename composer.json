{
    "name": "mahoskye/send-from",
    "description": "WordPress plugin for modifying the from line on all emails",
    "type": "wordpress-plugin",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "Benjamin Buddle",
            "homepage": "https://github.com/mahoskye"
        }
    ],
    "require": {
        "php": ">=7.4"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.6",
        "yoast/phpunit-polyfills": "^1.1"
    },
    "scripts": {
        "test": "phpunit",
        "test-docker": "docker compose exec -T phpunit ./vendor/bin/phpunit"
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
